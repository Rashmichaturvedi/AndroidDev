<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:padding="30dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:backgroundTint="#fff"
                    android:orientation="vertical"
                    android:padding="10dp">

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >
                       <TextView
                           android:id="@+id/LunchExpense"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Lunch Expense: "
                           android:textColor="@color/colorPrimary"
                           android:textSize="20dp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/ShowLunchExpense"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentTop="true"
                           android:layout_weight="0.5"
                           android:text="Show Lunch Expense:"
                           android:textColor="#000"
                           android:textSize="20dp"
                           android:layout_marginLeft="175dp"
                         />

                       <TextView
                           android:id="@+id/DinnerExpense"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Dinner Expense:"
                           android:textColor="@color/colorPrimary"
                           android:textSize="20dp"
                           android:textStyle="bold"
                           android:layout_marginTop="50dp"/>
                       <TextView
                           android:id="@+id/ShowDinnerExpense"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.5"
                           android:text="Show Dinner Expense"
                           android:textColor="#000"
                           android:textSize="20dp"
                           android:layout_marginTop="50dp"
                           android:layout_marginLeft="175dp"
                           />
                       <TextView
                           android:id="@+id/TravellingExpense"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.5"
                           android:text="Travelling Expense"
                           android:textColor="@color/colorPrimary"
                           android:textSize="20dp"
                           android:textStyle="bold"
                           android:layout_marginTop="100dp"/>

                       <TextView
                           android:id="@+id/ShowTravellingExpense"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.5"
                           android:text="Show Travelling Expense"
                           android:textColor="#000"
                           android:textSize="20dp"
                           android:layout_marginTop="100dp"
                           android:layout_marginLeft="175dp"/>

                       <TextView
                           android:id="@+id/ExtraExpense"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.5"
                           android:text="Extra Expense: "
                           android:textColor="@color/colorPrimary"
                           android:textSize="20dp"
                           android:layout_marginTop="150dp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/ShowExtraExpense"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.5"
                           android:text="Show Extra Expense"
                           android:textColor="#000"
                           android:textSize="20dp"
                           android:layout_marginTop="150dp"
                           android:layout_marginLeft="175dp"/>





                   </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>