<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#63aabc">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="#63aabc">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:backgroundTint="#fff"
            android:padding="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:backgroundTint="#fff"
                android:orientation="vertical"
                android:padding="20dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="DailyReport"
                    android:textColor="@color/colorPrimary"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnreport"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Tab To Save Location"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/custmordetails"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Customer's Data"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/dailyexpensive"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Expense's Data "
                    android:textColor="#fff"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/Savedlocation"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Saved Location's "
                    android:textColor="#fff"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
