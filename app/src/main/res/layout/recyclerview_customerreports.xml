<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#63aabc">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:padding="30dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:padding="10dp">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#ff0000"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timee"
        android:layout_marginLeft="200dp"
        android:textSize="40dp"
        android:textColor="#ff0000"
        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop Name: "
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_weight="0.5"/>

                    <TextView
                        android:id="@+id/ShowShopName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_weight="0.5"
                        android:text="Show Shop Name:"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop Address: "
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:layout_marginTop="70dp"/>

                    <TextView
                        android:id="@+id/ShowAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_weight="0.5"
                        android:text="Show Address:"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_marginTop="70dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                       android:text="Conversation Details:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="120dp"/>

                    <TextView
                        android:id="@+id/ShowConversationDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_weight="0.5"
                      android:text="Show Conversation Details"
                        android:textColor="#000"
                        android:textSize="20dp"
android:layout_marginTop="120dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                       android:text="Feedback:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="200dp"/>

                    <TextView
                        android:id="@+id/Showfeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_weight="0.5"
                       android:text="show feedback"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_marginTop="200dp"/>

                    <TextView
                        android:id="@+id/personname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Person Name:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="250dp"/>

                    <TextView
                        android:id="@+id/Showpersonname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_weight="0.5"
                       android:text="Show person name"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_marginTop="250dp"
                        />

                    <TextView
                        android:id="@+id/ContackDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Contact Details :"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="300dp"/>

                    <TextView
                        android:id="@+id/ShowContackDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_weight="0.5"
                        android:text="Show Contact Details"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_marginTop="300dp"/>
</androidx.cardview.widget.CardView>
                </LinearLayout>

            </ScrollView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>